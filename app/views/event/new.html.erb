<%= form_with(url: "/save", method: "post") do %>
  
  <%= label_tag(:q, "Create New Event:") %>
  <p>

  <%= select_tag("people", raw("<option>Drug</option><option>Appointment</option>"))%>

</p>
<p>
    <%= datetime_field(:user, :event_time, min: Date.today) %>
</p>
<p>
    <%# Conditional evaluation will be added later %>
    <p>
    <%= label_tag(:q, "Enter Dr. Name or National Drug Code #") %>
    </p>
    <p>
    <%= text_field_tag(:q) %>
    </p>
</p>

  <%= submit_tag("Save") %>
  <%= button_tag("Cancel") %>

<% end %>
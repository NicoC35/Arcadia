<div class="contacts-body">
<button class="contacts-close"><img src='/assets/close.svg' alt="x"/></button>
<h1 class="contacts-header">Important Contacts</h1>
<%= form_with url: '/contacts/add' do |form| %>
    <div class="row">
    <%= form.label :name, :class => "contacts-label" %>
    <div class="form-group col-md-8 contacts-table">
      <%= form.text_field :name,
      autocomplete: "off", class: "form-control contacts-name-form " %>
    </div>
    <%= form.label :company, :class => "contacts-label" %>
    <div class="form-group col-md-8 contacts-table">
       <%= form.text_field :company,
      autocomplete: "off", autofocus: true, class: "form-control contacts-name-form" %>
    </div>
    <%= form.label :phone1, :class => "contacts-label" %>
    <div class="form-group col-md-4 contacts-table">
      <%= form.text_field :phone1,
      class: "form-control contacts-name-form" %>
    </div>
    <%= form.label :fax, :class => "contacts-label" %>
    <div class="form-group col-md-4 contacts-table">
      <%= form.text_field :fax,
      class: "form-control contacts-name-form" %>
    </div>
    <%= form.label :email, :class => "contacts-label" %>
    <div class="form-group col-md-4 contacts-table">
      <%= form.text_field :email,
      class: "form-control contacts-name-form" %>
    </div>
    <%= form.label :address1, :class => "contacts-label" %>
    <div class="form-group col-md-4 contacts-table">
      <%= form.text_field :address1,
      class: "form-control contacts-name-form" %>
    </div>
    <%= form.label :city, :class => "contacts-label" %>
    <div class="form-group col-md-4 contacts-table">
      <%= form.text_field :city,
      class: "form-control contacts-name-form" %>
    </div>
    <%= form.label :url, :class => "contacts-label" %>
    <div class="form-group col-md-4 contacts-table">
      <%= form.text_field :url,
      class: "form-control contacts-name-form" %>
    </div>
  </div>
  <%= form.submit "Add", :class => "contacts-btn"%>
<% end %>

<h4>Users Contact List</h4>
 
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th>Phone1</th>
      <th>Fax</th>
      <th>Email</th>
      <th>Address1</th>
      <th>City</th>
      <th>State</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% @contact.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.company %></td>
        <td><%= contact.phone1 %></td>
        <td><%= contact.fax %></td>
        <td><%= contact.email %></td>
        <td><%= contact.address1 %></td>
        <td><%= contact.city %></td>
        <td><%= contact.url %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 </div>

 

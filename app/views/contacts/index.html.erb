
<div class="contacts-body" >

<div class="contacts-parent">
<div class="contact-close-div">
  <div class="trail-nav"></div>
  <a class="contact-close" href='javascript:history.go(-1)'>
<img src="https://arcadia-static-assets.s3.amazonaws.com/arcadia-svgs/close.svg" alt="close button" />
</a>
</div>


<div class="contacts-text-div">
<div class="contact-header">Contacts</div>
  <div class="search-contacts">
    <input class="contacts-input" type="text" placeholder="&#xF002; 
    Search" style="font-family:Arial, FontAwesome" />
  </div> 
</div> 
</div>

<div class="contacts-tbl-div">
<table class="t-body-contacts" > 
  <tbody class="t-body-contacts">
    <% @contact.each do |contact| %>
      <tr>
       <th class="contacts-h contacts-line">Name</th>
        <td class="contacts-name-1"><%= contact.name %></td>
      </tr>
      <tr>
       <th class="contacts-h contacts-line">Phone</th>  
        <td class="contacts-name"><%= contact.phone1 %></td>
      </tr>
      <tr>
       <th class="contacts-h contacts-line">Fax</th>  
        <td class="contacts-name"><%= contact.fax %></td> 
      </tr>
      <tr>
       <th class="contacts-h contacts-line">Email</th>  
        <td class="contacts-name"><%= contact.email %></td> 
      </tr>
      <tr>
        <th class="contacts-h contacts-line">Address</th> 
        <td class="contacts-name"><%= contact.address1 %></td> 
      </tr> 
      <tr>
        <th class="contacts-h contacts-line">City</th>  
        <td class="contacts-name"><%= contact.city %></td>
      </tr> 
      <tr>
        <th class="contacts-h contacts-line">State</th>  
        <td class="contacts-name"><%= contact.state %></td>
      </tr> 
      <tr>
        <th class="contacts-h contacts-line">Zipcode</th>   
        <td class="contacts-name"><%= contact.zipcode %></td> 
      </tr>
      <tr>
        <th class="contacts-h contacts-line">Country</th>  
        <td class="contacts-name"><%= contact.country %></td>
      </tr>
      <tr> 
        <th class="contacts-h contacts-line"> Notes</th>     
        <td><%= contact.notes %></td>
      </tr>
        <tr>
        <th class="contacts-text-div"></th>  
      </tr>
    <% end %> 
  </tbody>
</table> 
</div>
</div>

